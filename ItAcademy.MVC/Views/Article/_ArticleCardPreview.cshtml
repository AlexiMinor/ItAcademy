@model ArticleModel

<div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
    <div class="card">
        <img class="card-img-top card-img-custom">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <div class="card-text">
                @Html.Raw(Model.Description)
            </div>

            <a asp-action="Details" asp-route-id="@Model.ArticleId" class="btn btn-primary">Details</a>

        </div>
        <div class="card-footer text-body-secondary">
            by @Model.SourceName at @Model.PublicationDate
        </div>
    </div>
    <br/>
 </div> 